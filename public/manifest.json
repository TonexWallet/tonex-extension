{
  "manifest_version": 3,
  "version": "1.0.0",
  "short_name": "Tonex",
  "name": "Tonex Wallet",
  "description": "FreeTon browser extension",
  "action": {
    "default_title": "Tonex",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.bundle.js",
    "worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.bundle.js"]
    }
  ],
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "options_page": "options.html",
  "permissions": ["storage", "notifications"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
